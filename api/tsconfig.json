{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@weasel/controllers/*": ["controllers/*"],
      "@weasel/models/*": ["models/*"],
      "@weasel/routes/*": ["routes/*"],
      "@weasel/schemas/*": ["schemas/*"],
      "@weasel/utils/*": ["utils/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "alwaysStrict": true
  },
  "include": ["src/**/*"]
}
