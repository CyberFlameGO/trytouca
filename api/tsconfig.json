{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [ "es2017" ],
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "alwaysStrict": true
    },
    "include": [
        "src/**/*"
    ]
}
