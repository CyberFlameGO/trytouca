{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@weasel/controllers/*": ["src/controllers/*"],
      "@weasel/models/*": ["src/models/*"],
      "@weasel/routes/*": ["src/routes/*"],
      "@weasel/schemas/*": ["src/schemas/*"],
      "@weasel/utils/*": ["src/utils/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "alwaysStrict": true
  },
  "include": ["src/**/*"]
}
