{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/controllers/*": ["controllers/*"],
      "@/middlewares": ["middlewares"],
      "@/models/*": ["models/*"],
      "@/routes/*": ["routes/*"],
      "@/schemas/*": ["schemas/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "alwaysStrict": true
  },
  "include": ["src/**/*"]
}
