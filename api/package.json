{
  "name": "@getweasel/backend",
  "version": "1.3.0",
  "description": "Continuous regression testing for critical software workflows.",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/getweasel/weasel.git",
  "bugs": "https://github.com/getweasel/weasel/issues",
  "homepage": "https://getweasel.com",
  "keywords": [
    "snapshot-testing",
    "test-automation",
    "test-framework",
    "regression-testing"
  ],
  "author": {
    "name": "Pejman Ghorbanzade",
    "email": "pejman@getweasel.com"
  },
  "main": "dist/server.js",
  "scripts": {
    "build": "yarn run build:mails && yarn run build:ts",
    "build:mails": "mkdir -p dist/templates; mjml templates/*.mjml --config.beautify false --config.minify true --output ./dist/templates/",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "doc": "typedoc",
    "start": "node .",
    "test": "cross-env NODE_ENV=test ENV_FILE=test nyc mocha --require tsconfig-paths/register --require ts-node/register --require source-map-support/register --full-trace --bail test/**/*.test.ts",
    "lint": "eslint . --ext .ts",
    "dev": "nodemon ./src/server.ts",
    "dev:debug": "nodemon --inspect ./src/server.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.12.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-validator": "^6.10.0",
    "flatbuffers": "^1.10.2",
    "hide-powered-by": "^1.0.0",
    "html-to-text": "^7.0.0",
    "ioredis": "^4.24.5",
    "ip": "^1.1.5",
    "jws": "^4.0.0",
    "lodash": "^4.17.21",
    "marked": "^2.0.1",
    "mixpanel": "^0.13.0",
    "module-alias": "^2.2.2",
    "mongoose": "^5.12.2",
    "mustache": "^4.1.0",
    "nocache": "^2.0.0",
    "nodemailer": "^6.5.0",
    "uuid": "^8.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.2.15",
    "@types/cookie-parser": "^1.4.2",
    "@types/elasticsearch": "^5.0.37",
    "@types/express": "^4.17.11",
    "@types/flatbuffers": "^1.9.0",
    "@types/ioredis": "^4.22.1",
    "@types/ip": "^1.1.0",
    "@types/jws": "^3.2.3",
    "@types/lodash": "^4.14.168",
    "@types/marked": "^2.0.0",
    "@types/mocha": "^8.2.2",
    "@types/mustache": "^4.1.1",
    "@types/node": "^14.14.37",
    "@types/nodemailer": "^6.4.1",
    "@types/sinon": "^9.0.11",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mjml": "^4.9.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "nyc": "15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.9",
    "swagger-inline": "^3.0.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.34",
    "typescript": "^4.2.3"
  }
}
