{
  "name": "@touca/api",
  "version": "1.4.0",
  "description": "Continuous regression testing for critical software workflows.",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/trytouca/touca.git",
  "bugs": "https://github.com/trytouca/touca/issues",
  "homepage": "https://touca.io",
  "keywords": [
    "snapshot-testing",
    "test-automation",
    "test-framework",
    "regression-testing"
  ],
  "author": {
    "name": "Pejman Ghorbanzade",
    "email": "pejman@touca.io"
  },
  "main": "dist/server.js",
  "scripts": {
    "build": "yarn run build:mails && yarn run build:ts",
    "build:mails": "mkdir -p dist/templates; mjml templates/*.mjml --config.beautify false --config.minify true --output ./dist/templates/",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "docs:external": "mkdir -p local/docs/external; swagger-inline src/routes/*.ts src/types/commontypes.ts --base docs/swagger.base.yaml --format yaml > local/docs/external/swagger.yaml; redoc-cli bundle local/docs/external/swagger.yaml --options.hideDownloadButton=true --output=local/docs/external/index.html --title=\"Touca Server API Reference\"",
    "docs:internal": "typedoc",
    "docs": "yarn run docs:external && yarn run docs:internal",
    "start": "node .",
    "test": "cross-env NODE_ENV=test ENV_FILE=test nyc mocha --require tsconfig-paths/register --require ts-node/register --require source-map-support/register --full-trace --bail test/**/*.test.ts",
    "lint": "eslint src test --ext .ts",
    "dev": "nodemon ./src/server.ts",
    "dev:debug": "nodemon --inspect ./src/server.ts"
  },
  "dependencies": {
    "@sindresorhus/df": "^3.1.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "dotenv": "^9.0.2",
    "express": "^4.16.4",
    "express-validator": "^6.11.1",
    "flatbuffers": "^1.10.2",
    "hide-powered-by": "^1.0.0",
    "html-to-text": "^7.1.1",
    "ioredis": "^4.27.2",
    "jws": "^4.0.0",
    "lodash": "^4.17.21",
    "marked": "^2.0.3",
    "minio": "^7.0.18",
    "mixpanel": "^0.13.0",
    "module-alias": "^2.2.2",
    "mongoose": "^5.12.9",
    "mustache": "^4.2.0",
    "nocache": "^2.0.0",
    "nodemailer": "^6.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.2.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/flatbuffers": "^1.9.0",
    "@types/ioredis": "^4.26.3",
    "@types/jws": "^3.2.3",
    "@types/lodash": "^4.14.169",
    "@types/marked": "^2.0.2",
    "@types/minio": "^7.0.7",
    "@types/mocha": "^8.2.2",
    "@types/mustache": "^4.1.1",
    "@types/node": "^15.3.0",
    "@types/nodemailer": "^6.4.1",
    "@types/sinon": "^10.0.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "mjml": "^4.9.3",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "nyc": "15.1.0",
    "prettier": "^2.3.0",
    "redoc-cli": "^0.11.4",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.9",
    "swagger-inline": "^4.0.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  }
}
