    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "nock": "^13.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
